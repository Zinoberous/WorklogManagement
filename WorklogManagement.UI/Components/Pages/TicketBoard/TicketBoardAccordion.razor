<FlexCol>
    <FlexFill>
        <RadzenCard @onclick="Toggle">
            <FlexRow>
                <FlexFill><RadzenText Text="@Title" /></FlexFill>
                <RadzenIcon Icon="@(IsOpen ? "expand_content" : "collapse_content")" />
            </FlexRow>
        </RadzenCard>
    </FlexFill>
    <Accordion IsOpen="IsOpen" Style="padding: 0 var(--rz-row-gap);">
        <TicketBoardLayer TicketGroups="@TicketGroups" OnEdit="@OnEdit" OnDelete="@OnDelete" />
    </Accordion>
</FlexCol>
