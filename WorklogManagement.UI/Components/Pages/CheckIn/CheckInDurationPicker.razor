@if (Expected.HasValue)
{
    <Column Style="display: flex; gap: 5px; align-items: center;">
        <div>
            <DurationPicker @bind-Value="ActualValue" Style="width: 85px;" />
        </div>
        <span style="width: 5px;">&#47;</span>
        <div style="position: relative;">
            <span style="position: absolute; z-index: 10; top: -13px; left: 3px;">von</span>
            <DurationPicker @bind-Value="ExpectedValue" Style="width: 85px;" />
        </div>
    </Column>
}
else
{
    <Column>
        <DurationPicker @bind-Value="ActualValue" Style="width: 185px" />
    </Column>
}
