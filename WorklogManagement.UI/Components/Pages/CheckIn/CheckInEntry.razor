<Row>
    <Column>
        <RadzenDropDown @bind-Value="SelectedType" Data="@TypeOptions" />
    </Column>
    @if (ExpectedValue.HasValue)
    {
        <Column Style="width: 100px;">
            <RadzenDatePicker @bind-Value="ActualValue" ShowTime="true" TimeOnly="true" DateFormat="HH:mm" />
        </Column>
        <Column Style="width: 100px;">
            <RadzenDatePicker @bind-Value="ExpectedValue" ShowTime="true" TimeOnly="true" DateFormat="HH:mm" />
        </Column>
    }
    else
    {
        <Column Style="width: calc(200px + var(--rz-row-gap))">
            <RadzenDatePicker @bind-Value="ActualValue" ShowTime="true" TimeOnly="true" DateFormat="HH:mm" />
        </Column>
    }
    <Column Fill="true">
        <RadzenTextBox @bind-Value="Note" Placeholder="Anmerkung:" />
    </Column>
    <Column>
        <RadzenIcon Icon="delete" Style="cursor: pointer" />
    </Column>
</Row>
