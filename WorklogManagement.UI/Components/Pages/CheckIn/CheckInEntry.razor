<Row>
    <Column>
        <RadzenTextBox Value="@Type" ReadOnly Style="@TypeStyle" />
    </Column>
    @if (Expected.HasValue)
    {
        <CheckInDurationPicker @bind-Actual="ActualValue" @bind-Expected="ExpectedValue" />
    }
    else
    {
        <CheckInDurationPicker @bind-Actual="ActualValue" />
    }
    <Column Fill>
        <RadzenTextBox @bind-Value="NoteValue" Placeholder="Anmerkung:" />
    </Column>
    <Column>
        <RadzenIcon Icon="delete" Style="cursor: pointer" @onclick="OnDelte" />
    </Column>
</Row>
