<Dialog IsOpen="@IsOpen" IsOpenChanged="@IsOpenChanged" Title="Neuer Eintrag">
    <FlexCol>
        <FlexRow>
            <FlexFill>
                <RadzenDropDown @bind-Value="SelectedType" Data="@TypeOptions" ItemRender="@TypeRender" Style="@TypeStyle" />
            </FlexFill>
            @if (Constants.WorkTimeLabels.Values.Contains(SelectedType))
            {
                <CheckInDurationPicker @bind-Actual="Actual" @bind-Expected="Expected" />
            }
            else
            {
                <CheckInDurationPicker @bind-Actual="Actual" />
            }
        </FlexRow>
        <FlexRow>
            <FlexFill>
                <RadzenTextBox @bind-Value="Note" Placeholder="Anmerkung:" />
            </FlexFill>
        </FlexRow>
        <FlexRow Style="justify-content: space-between;">
            <RadzenButton Click="@Close">Abbrechen</RadzenButton>
            <FlexRow>
                <RadzenButton Click="@Save" Disabled="@(TypeOptions.Count() == 1)">Speichern</RadzenButton>
                <RadzenButton Click="@SaveAndClose">Speichern & schlie√üen</RadzenButton>
            </FlexRow>
        </FlexRow>
    </FlexCol>
</Dialog>
