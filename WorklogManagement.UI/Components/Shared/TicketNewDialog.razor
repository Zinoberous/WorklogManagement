<Dialog IsOpen="@IsOpen" IsOpenChanged="@IsOpenChanged" Title="Neues Ticket">
    <FlexCol>
        <RadzenTextBox Placeholder="Titel:" @oninput="@(args => Title = args.Value?.ToString() ?? string.Empty)" />
        <TicketSearch Placeholder="Referenz:" @bind-Value="RefTicketSearch" />
        <Editor Placeholder="Beschreibung:" @bind-Value="Description" />
        <AttachmentPanel Attachments="@Attachments" AttachmentsChanged="@AttachmentsChanged" />
        <FlexRow>
            <FlexFill />
            <RadzenButton Click="@Close">Abbrechen</RadzenButton>
            <RadzenButton Click="@Save" Disabled="@string.IsNullOrWhiteSpace(Title)">Speichern</RadzenButton>
        </FlexRow>
    </FlexCol>
</Dialog>
