@using WorklogManagement.Shared.Models

<RadzenDropDown
    Placeholder="@Placeholder"
    Value="@Value"
    ValueChanged="@ValueChanged"
    Data="@Tickets"
    TextProperty="@nameof(RefTicket.Title)"
    Template="@Template"
    AllowFiltering
    LoadData="LoadData"
    AllowClear="@AllowClear"
/>

@code {
    private RenderFragment<dynamic> Template = (dynamic data) => @<div>#@data.Id - @data.Title</div>;
}
