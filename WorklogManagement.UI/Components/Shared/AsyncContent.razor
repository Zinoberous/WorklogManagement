@if (IsLoading)
{
    <RadzenStack AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center" Gap="2rem" Style="height: 100%;" >
        <RadzenProgressBarCircular Value="100" ShowValue="false" Mode="ProgressBarMode.Indeterminate" />
    </RadzenStack>
}
else if (Error is not null)
{
    <RadzenRow>
        <RadzenColumn Size="12">
            @Error.Message
        </RadzenColumn>
    </RadzenRow>
}
else
{
    @ChildContent
}
